{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    //  FAZ O SRC VIRAR A RAIZ DO PROJETO
    "baseUrl": "./src",

    //  ALINHA TS COM O METRO (Expo Router precisa disso)
    "moduleResolution": "bundler",

    //  NOSSO ALIAS LIMPO
    "paths": {
      "@/*": ["*"]
    },

    //  IMPORTANTE PARA EXPO ROUTER
    "types": ["expo-router"],

    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },

  "include": [
    "src",
    "app",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
